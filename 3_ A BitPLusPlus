#include<iostream>
using namespace std;
int main()
{
	int numberOfOperations , ans=0;
	cin >> numberOfOperations;
	for (int i = 0; i < numberOfOperations; i++)
	{
		string operation;
		cin >> operation;
		if (operation == "++X" || operation == "X++") {
			ans++;
		}
		else if (operation == "--X" || operation == "X--")
		{
			ans--;
		}
	}
	std:: cout << ans << endl;
	return 0;
}
