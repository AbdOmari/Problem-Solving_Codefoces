#include<iostream>
using namespace std;
int main()
{
	int numberOfSentence;
	cin >> numberOfSentence;
	for (int i = 0; i < numberOfSentence; i++)
	{
		string sentence;
		cin >> sentence;
		int lengthSentence = sentence.size();
		if (lengthSentence > 10)
		{
			cout << sentence[0] << lengthSentence - 2 << sentence[lengthSentence - 1] << endl;
		}
		else
			cout << sentence << endl;
	}

}
